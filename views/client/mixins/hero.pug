mixin hero(title, subtitle)
  section.py-5.bg-body-tertiary.border-bottom
    .container
      .row.align-items-center.gy-4
        .col-lg-8
          h1.display-6.mb-3= title
          if subtitle
            p.lead.text-secondary.mb-4= subtitle
          .d-flex.gap-2
            a.btn.btn-warning(href="/about")
              i.bi.bi-info-circle.me-2
              | Giới thiệu
            a.btn.btn-outline-dark(href="/forums")
              i.bi.bi-chat-dots.me-2
              | Diễn đàn
        .col-lg-4.d-none.d-lg-block
          .rounded-3.border.p-2.text-center
            img(src="/client/image/olp.jpg" alt="Khám phá cộng đồng" class="img-fluid rounded-3 shadow-sm" style="width:100%;max-height:260px;object-fit:cover;")
            small.text-secondary.d-block.mt-2 Khám phá cộng đồng