mixin memberCard(name, role, avatarUrl, href)
  a.d-flex.align-items-center.gap-3.p-3.border.rounded-3.text-decoration-none.text-reset(href=href)
    // Avatar with shadow, border, and subtle gradient background
    .avatar-wrapper(style="width:56px;height:56px;display:flex;align-items:center;justify-content:center;background:linear-gradient(135deg,#f8fafc,#e0e7ff);border-radius:50%;box-shadow:0 2px 8px rgba(0,0,0,0.08);border:2px solid #e0e7ff;")
      img(src=avatarUrl alt=name width="48" height="48" class="rounded-circle object-fit-cover" style="box-shadow:0 1px 4px rgba(0,0,0,0.10);")
    .flex-grow-1
      div.fw-semibold= name
      small.text-secondary= role
    i.bi.bi-chevron-right.text-secondary

//- Member card (memberCard2)
mixin memberCard2(name, role, avatarUrl, email, bio, href)
  a.d-flex.align-items-center.gap-3.p-3.border.rounded-3.text-decoration-none.text-reset(
    href=href 
    style="border-color:#ffc107;background:#232323;"
  )
    // Avatar
    .avatar-wrapper(
      style="width:56px;height:56px;display:flex;align-items:center;justify-content:center;background:linear-gradient(135deg,#232323,#ffc10722);border-radius:50%;box-shadow:0 2px 8px rgba(0,0,0,0.08);border:2px solid #ffc107;"
    )
      img(src=avatarUrl alt=name width="48" height="48" class="rounded-circle object-fit-cover" style="box-shadow:0 1px 4px rgba(0,0,0,0.10);")
    .flex-grow-1
      div.fw-semibold.text-warning= name
      small.text-secondary
        i.bi.bi-person-circle.me-1
        = role
      if email
        div.text-secondary.small.mt-1
          i.bi.bi-envelope.me-1
          = email
      if bio
        div.text-muted.small.mt-1= bio
    i.bi.bi-chevron-right.text-secondary

//- Executive card (executiveCard)
mixin executiveCard(name, role, avatarUrl, email, bio, href)
  a.d-flex.align-items-center.gap-3.p-3.border.rounded-3.text-decoration-none.text-reset(
    href=href 
    style="border-width:2px;border-color:#ffc107;background:linear-gradient(90deg,#232323 60%,#ffc10722 100%);box-shadow:0 4px 24px rgba(255,193,7,0.12);"
  )
    // Avatar with crown icon
    .avatar-wrapper.position-relative(
      style="width:64px;height:64px;display:flex;align-items:center;justify-content:center;background:linear-gradient(135deg,#232323,#ffc10744);border-radius:50%;box-shadow:0 4px 16px rgba(255,193,7,0.10);border:3px solid #ffc107;"
    )
      img(src=avatarUrl alt=name width="54" height="54" class="rounded-circle object-fit-cover" style="box-shadow:0 2px 8px rgba(255,193,7,0.15);")
      i.bi.bi-award-fill.position-absolute.top-0.start-100.translate-middle.text-warning.fs-4(
        style="z-index:2;"
        title="Ban cán sự"
      )
    .flex-grow-1
      div.fw-bold.text-warning.fs-5= name
      small.text-warning.fw-semibold
        i.bi.bi-star-fill.me-1
        = role
      if email
        div.text-warning.small.mt-1
          i.bi.bi-envelope-fill.me-1
          = email
      if bio
        div.text-light.small.mt-1= bio
    i.bi.bi-chevron-right.text-warning.fs-4

